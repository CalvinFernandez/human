angular.module('human.routes', [])
  .config(['$routeProvider', function($routeProvider) { 
    $routeProvider
      .when('/', { controller: 'PostsIndexCtrl', templateUrl: '<%= asset_path('partials/posts/posts-index.html') %>' })
      .when('/users', { controller: 'UsersIndexCtrl', templateUrl: '<%= asset_path('partials/users/users-index.html') %>' })
      .when('/users/:id', { controller: 'UsersShowCtrl', templateUrl: '<%= asset_path('partials/users/users-show.html') %>' })
      .when('/posts', { controller: 'PostsIndexCtrl', templateUrl: '<%= asset_path('partials/posts/posts-index.html') %>' })
      .when('/posts/:id', { controller: 'PostsShowCtrl', templateUrl: '<%= asset_path('partials/posts/posts-show.html') %>' })
      .when('/newPost', { controller: 'PostsNewCtrl', templateUrl: '<%= asset_path('partials/posts/posts-new.html') %>' })
      .when('/boards', { controller: 'BoardsIndexCtrl', templateUrl: '<%= asset_path('partials/boards/boards-index.html') %>' })
      .when('/boards/:id', { controller: 'BoardsShowCtrl', templateUrl:' <%= asset_path('partials/boards/boards-show.html') %>' }) 
      .when('/:tag', { controller: 'TagsShowCtrl', templateUrl: '<%= asset_path('partials/posts/posts-index.html') %>' })
      .otherwise({ redirectTo: '/' });
}]);
